{
  "defaultSeverity": "warning",
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rulesDirectory": [
    "node_modules/react-tsrules/src"
  ],
  "rules": {
    "no-floating-promises": false,
    "react-life-cycle-async-catch": true
  }
}